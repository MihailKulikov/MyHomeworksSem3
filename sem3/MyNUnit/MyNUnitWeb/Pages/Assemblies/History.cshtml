@page
@using MyNUnitWeb.Models
@model MyNUnitWeb.Pages.Assemblies.IndexModel

@{
    ViewData["Title"] = "History";
}

<h1>History</h1>

<p>
    <a asp-page="Upload">Upload New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Assembly[0].Name)
            </th>
            <th>Success</th>
            <th>Failed</th>
            <th>Ignored</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Assembly) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>@item.Tests.Count(test => test.Status == TestStatus.Success)</td>
            <td>@item.Tests.Count(test => test.Status == TestStatus.Failed)</td>
            <td>@item.Tests.Count(test => test.Status == TestStatus.Ignored)</td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.AssemblyId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
